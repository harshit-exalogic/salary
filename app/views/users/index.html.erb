<body ><br>


<ul>
    <li><%= link_to 'Create New User', new_user_path %></li>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Logout', logout_path %></li>
    
  </ul>





<p id="notice"><%= notice %></p>

<fieldset style="border: 2px solid black; width: 1px ; text-align:center; margin-left: 45px; padding-left: 40px; padding-right: 40px; ">
  <legend><h1>List of users:</h1></legend>
<head>
<style>
table, th, td {
  border: 1px solid black;
}
tbody {color:black; font-weight:bold;}
th, td {
  padding: 5px;
}
</style>
</head>


<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Salary form</th>
      <th>Show Salary</th>
      <th>Pay Slip</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><button class="button button4"><%= link_to 'Show', user%></button></td>
        <td><button class="button button4"><%= link_to 'Edit', edit_user_path(user)%></button></td>
        <td><button class="button button4"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }%></button></td>
        <td><button class="button button4"><%= link_to 'Add Salary', salary_form_user_path(user)%></button></td>
        <td><button class="button button4"><%= link_to 'Show Salary', show_salary_user_path(user)%></button></td>
        <td><button class="button button4"><%= link_to 'Pay Slip', salary_slip_path(id: user.id, :format => :pdf)%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

