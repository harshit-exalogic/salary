<!DOCTYPE html>
<html>
<head>
 <style >
   body{
    background: url(<%= asset_path 'image.jpg' %>);
background-size: 200%;
   }


 </style>
</head>
<body >




<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>






    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   

  
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name%>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name%>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth,{ :max => Date.today }%>
   
  </div>

  <div class="field">
    <%= form.label :date_of_joining %>
    <%= form.date_field :date_of_joining %>
  </div>


  <div class="field">
    <%= form.label :employee_Id %>
    <%= form.number_field :employee_id %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.text_field :department %>
  </div>

  <div class="field">
    <%= form.label :designation %>
    <%= form.text_field :designation %>
  </div>
  <div class="field">
    <%= form.label :bank_name %>
    <%= form.text_field :bank_name %>
  </div>
  <div class="field">
    <%= form.label :bank_branch %>
    <%= form.text_field :bank_branch %>
  </div>
  <div class="field">
    <%= form.label :IFSC_code %>
    <%= form.text_field :ifsc_code %>
  </div>


  <div class="field">
    <%= form.label :bank_account %>
    <%#= form.number_field :bank_account,:minlength =>8, :maxlength => 18 %>
    <%= form.text_field :bank_account ,:minlength =>6, :maxlength => 18,
    :pattern=>'\d*'%>
  </div>


  

  

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :addrress %>
  </div>



<div class="field">
    <%= form.label :state %>
    <%= form.select :state, [['State',nil],'Andaman and Nicobar Islands','Andhra Pradesh','Arunachal Pradesh','Assam','Bihar','Chandigarh','  Chhattisgarh','Dadra and Nagar Haveli','Daman and Diu','Delhi','Goa','Gujarat','Haryana','Himachal Pradesh','Jammu and Kashmir','Jharkhand','Karnataka','Kerala','Ladakh',
      'Lakshadweep','Madhya Pradesh','Maharashtra','Manipur','Meghalaya','Mizoram','Nagaland','Odisha','Puducherry','Punjab','Rajasthan','  Sikkim','Tamil Nadu','Telangana','Tripura','Uttar Pradesh','Uttarakhand','West Bengal'] %>
  </div>

  <div class="field">
    <%= form.label :pincode %>
    <%= form.text_field :pincode ,:minlength =>6, :maxlength => 6,
    :pattern=>'\d*'%>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.select :country,[['Country',nil],'India']%>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender,[['Gender',nil],'Male','Female','Other']%>
  </div>



  <div class="field">
    <%= form.label :mobile %>
    <%= form.text_field :mobile,:minlength =>10, :maxlength => 10, :pattern=>'\d*' %>
  </div>

  

  <div class="field">
    <%= form.label :blood_type %>
    <%= form.select :blood_type,[['Blood Type',nil],'A+','A-','B+','B-','AB+','AB-','O+','O-'] %>
  </div>

  <div class="field">
    <%= form.label :emergency_contact_name %>
    <%= form.text_field :emergency_contact_name %>
  </div>

  <div class="field">
    <%= form.label :emergency_contact_number %>
    <%= form.text_field :emergency_contact_number,:minlength =>10, :maxlength => 10,:pattern=>'\d*' %>
  </div>

  <div class="field">
    <%= form.label :primary_skill %>
    <%= form.text_field :primary_skill %>
  </div>

  <div class="field">
    <%= form.label :secondary_skill_1 %>
    <%= form.text_field :secondary_skill_1%>
  </div>

  <div class="field">
    <%= form.label :secondary_skill_2 %>
    <%= form.text_field :secondary_skill_2 %>
  </div>

  <div class="field">
    <%= form.label :notice_period_in_days %>
    <%= form.number_field :notice_period_in_days,:min =>'0',:pattern=>'\d*' %>
  </div>


  <div class="field">
    <%= form.label :role %>
    <%= form.select :role,[['Role',nil],'Admin','Employee'],{:required=>'true'} %>
  </div>


<tr>
    <td colspan="4"><label><h3><b>LOGIN DETAILS</b></h3></label></td></tr>


  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>




  <%= link_to 'Home', root_path %>
  

<% end %>









</body>
</html>


